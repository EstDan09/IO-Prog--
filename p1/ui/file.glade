<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>

  <object class="GtkAdjustment" id="adj1">
    <property name="lower">0</property>
    <property name="upper">999</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
    <property name="value">0</property>
  </object>

  <object class="GtkAdjustment" id="adj2">
    <property name="lower">0</property>
    <property name="upper">999</property>
    <property name="step-increment">1</property>
    <property name="page-increment">10</property>
    <property name="value">0</property>
  </object>

  <object class="GtkWindow" id="main_window">
    <property name="title">File Input App</property>
    <property name="default-width">300</property>
    <property name="default-height">200</property>
    <property name="visible">True</property>

    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <property name="margin">12</property>
        <property name="visible">True</property>

        <child>
          <object class="GtkEntry" id="entry_filename">
            <property name="placeholder-text">Enter filename...</property>
            <property name="can-focus">True</property>
            <property name="visible">True</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>

        <child>
          <object class="GtkSpinButton" id="spin_num1">
            <property name="numeric">True</property>
            <property name="can-focus">True</property>
            <property name="adjustment">adj1</property>
            <property name="visible">True</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">1</property>
          </packing>
        </child>

        <child>
          <object class="GtkSpinButton" id="spin_num2">
            <property name="numeric">True</property>
            <property name="can-focus">True</property>
            <property name="adjustment">adj2</property>
            <property name="visible">True</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">2</property>
          </packing>
        </child>

        <child>
          <object class="GtkBox" id="button_box">
            <property name="spacing">10</property>
            <property name="visible">True</property>

            <child>
              <object class="GtkButton" id="btn_save">
                <property name="label">Save</property>
                <property name="can-focus">True</property>
                <property name="visible">True</property>
              </object>
              <packing>
                <property name="expand">False</property>  
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>

            <child>
              <object class="GtkButton" id="btn_load">
                <property name="label">Load</property>
                <property name="can-focus">True</property>
                <property name="visible">True</property>
              </object>
              <packing>
                <property name="expand">False</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>

          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">3</property>
          </packing>
        </child>

      </object>
    </child>
  </object>
</interface>
